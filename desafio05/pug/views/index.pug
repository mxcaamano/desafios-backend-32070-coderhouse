html
  head
    script(src='https://cdn.jsdelivr.net/npm/bootstrap@5.2.0/dist/js/bootstrap.bundle.min.js', integrity='sha384-A3rJD856KowSb7dwlZdYEkO39Gagi7vIsF0jrRAoQmDKKtQBHUuLZ9AsSv4jD4Xa', crossorigin='anonymous')
    meta(charset='UTF-8')
    meta(http-equiv='X-UA-Compatible', content='IE=edge')
    meta(name='viewport', content='width=device-width, initial-scale=1.0')
    link(href='https://cdn.jsdelivr.net/npm/bootstrap@5.2.0/dist/css/bootstrap.min.css', rel='stylesheet', integrity='sha384-gH2yIJqKdNHPEq0n4Mqa/HGKIhSkIHeL5AyhkYV8i59U5AR6csBvApHHNl/vI1Bx', crossorigin='anonymous')
    link(rel='stylesheet', href='/style.css')
    title Document
  body.deer-theme-dark
    .container.py-3
      h2.fw-bold Productos
            .row.row-cols-1.row-cols-sm-2.row-cols-md-3.g-3.mb-3.mt-3
                if listExist    
                    each obj in list 
                        .col
                            .card.shadow-sm.bg-black
                                img.bd-placeholder-img.card-img-top(src=obj.thumbnail, alt='', width='100%', height='225')
                                .card-body
                                .d-flex.justify-content-between.align-items-center
                                    small.h6=`ID: ${obj.id}` 
                                h5.card-text.fs-5=obj.title  
                                p.card-text.fs-5=`Precio: ${obj.price} U$S`
                else 
                    .card-body.cart
                        .col-sm-12.empty-cart-cls.text-center
                            h4 No hay productos!
      a(href='/api/productos/add')
        button.btn-view Agregar productos
    include ./partials/footer