<div class="container py-3">
    <h2 class="fw-bold">Productos</h1>
<div class="row row-cols-1 row-cols-sm-2 row-cols-md-3 g-3 mb-3">
{{#if listExist}}
            {{#each list}}
        <div class="col">
          <div class="card shadow-sm bg-black">
            <img src={{thumbnail}} alt="" class="bd-placeholder-img card-img-top" width="100%" height="225">
            <div class="card-body">
                <div class="d-flex justify-content-between align-items-center">
                <small class="h6">ID: {{id}}</small>
              </div>
              <h5 class="card-text fs-5">{{title}}</h5>
              <p class="card-text">Precio: {{price}} U$S</p>
            </div>
          </div>
        </div>
            {{/each}}
    {{else}}
        <div className="card-body cart">
            <div className="col-sm-12 empty-cart-cls text-center">
            <h4>No hay productos!</h4>
            </div>
        </div>
{{/if}}
</div>
<a href="/api/productos/add">
<button class="btn-view">Agregar productos</button>
</a>
</div>

