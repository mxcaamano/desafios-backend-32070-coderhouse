                    <input type="hidden" id="id_cart" name="id_cart" class="form-control" required value = <%= id_cart %>>
                    <button type="submit" class="rounded-0 btn btn-danger font-weight-bold text-white m-2">Vaciar Carrito</button>
                  </form>
                  </div>
              </div>
