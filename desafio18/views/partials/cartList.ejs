                          <!-- </div> -->
                      </div>
                      </div>
                  </div>
                <% })%>
        <%}%>
            <% if(list.length > 0){ %>
            <div class="d-flex justify-content-center">
              <div class="col-md-4 order-md-2 mb-4">
                <h4 class="d-flex justify-content-between align-items-center mb-3">
                  <span class="fs-4">Articulos</span>
                  <span class="fs-4 p-2 rounded-pill bordes-neon"><%= qtyItems %></span>
                </h4>
                <ul class="bg-black list-group mb-3 bordes-neon mt-4">
                  <!-- <li class="bg-black list-group-item d-flex justify-content-between lh-condensed">
                    <div>
                      <h6 class="my-0">Subtotal</h6>
                    </div>
                    <span>Subtotal</span>
                  </li>
                  <li class="bg-black list-group-item d-flex justify-content-between lh-condensed">
                    <div>
                      <h6 class="my-0">Impuestos y Tasas</h6>
                    </div>
                    <span>Taxes</span>
                  </li>
                  <li class="bg-black list-group-item d-flex justify-content-between lh-condensed">
                    <div>
                      <h6 class="my-0">Descuentos</h6>
                    </div>
                    <span>- Taxes</span>
                  </li> -->
                  <li class="bg-black list-group-item d-flex justify-content-between">
                    <span class='fs-5'>Total (U$S) / <img class='mb-1' width="20" height="20" src="/assets/img/logos/usdtlogo.svg" alt='tether'/> / <img class='mb-1' width="20" height="20" src="/assets/img/logos/usdclogo.svg" alt='USD Coin'/></span>
                    <strong class='fs-5' id="total"><%= total %></strong>
                  </li>
                </ul>
                  <div class="my-2">
                  <form action="/carrito" method="post" class="d-flex align-items-center flex-column" style="width: 22rem;">
                    <input type="hidden" id="id_cart" name="id_cart" class="form-control" required value = <%= id_cart %>>
                    <input type="hidden" id="total" name="total" class="form-control" required value = <%= total %>>
                    <button type="submit" class="rounded-0 btn btn-success font-weight-bold text-white m-2">Enviar Pedido</button>
                  </form>
