<div class="container py-5">
    <div class="row d-flex justify-content-center align-items-center h-100">
      <div class="col-12">
        <div class="d-flex justify-content-between align-items-center mb-4">
        </div>
        <% if(list.length > 0){ %>
          <h3 class="fw-normal mb-0">Tu Carrito</h3>
            <% list.forEach(obj => { %>
                  <div class="card bg-black my-5 bordes-neon p-3">
                      <div class="card-body p-4">
                      <div class="row d-flex justify-content-between align-items-center">
                          <div class="col-md-2 col-lg-2 col-xl-2">
                          <img src=<%= obj.thumbnail %> class="img-fluid" alt="Imagen Producto"/>
                          </div>
                          <div class="col-md-3 col-lg-3 col-xl-3">
                          <p class="lead fw-normal mb-2"><%= obj.title %></p>
                          </div>
                          <div class="col-md-3 col-lg-3 col-xl-2 d-flex justify-content-center">                    
                          <span class="mx-3 fs-3"><%= obj.qty %></span>
                          </div>
                          <div class="col-md-3 col-lg-2 col-xl-3 justify-content-center">
                          <h6 class="mb-0">Precio Unitario: <%= obj.price %> U$S <img class='mb-1' width="20" height="20" src="/assets/img/logos/usdtlogo.svg" alt='tether'/> <img class='mb-1' width="20" height="20" src="/assets/img/logos/usdclogo.svg" alt='USD Coin'/></h6>
                          <h5 class="mb-0 fs-5">Total: <%= obj.qty * obj.price %> U$S <img class='mb-1' width="23" height="23" src="/assets/img/logos/usdtlogo.svg" alt='tether'/> <img class='mb-1' width="23" height="23" src="/assets/img/logos/usdclogo.svg" alt='USD Coin'/></h5>
                          </div>
                          <!-- <div class="col-md-1 col-lg-1 col-xl-1 text-end"> -->
